---
import BaseLayout from "../layouts/BaseLayout.astro";
import profilePic from "../assets/Profile.jpg";
import rightArrow from "../assets/rightArrow.png";
const pageTitle = "Home Page";
---
<style>
	html {
		background-color: #ffffff;
	}
	img{
		border-radius: 50%;
		display: block;
		margin-left: auto;
		margin-right: auto;
	}

	h1{
		text-align: center;
		color: #ffffff;
	}
	
	h2{
		padding-left: 10px;
		text-align: left;
		color: #ffffff;
	}

	.identity{
		background-color: #1f2022;
		opacity: 0.75;
		border-radius: 5px;
		border-bottom: 5px;
		border-color: blue;

	}

	@media screen and (min-width: 636px) {
		html{
			background-color: #ffffff;
			background-image: url('../assets/BackgroundLight.jpeg');
			background-repeat: no-repeat;
			background-size: cover;
			background-position: right left;
		}
	}
  
</style>
<BaseLayout pageTitle = {pageTitle}>
	<img src={profilePic} alt="Profile Pic" height="200" width="200"/>
	<h1 >Finn van Montfort</h1>
	<div class="identity"><h2>Student, Runner & aspiring Software Developer</h2><img src={rightArrow} alt="right arrow" height="20" width="20"/></div>
	<a href="/portfolio/">Check out my work</a>
	<br/>
	<a href="/contact/">Contact me</a>
</BaseLayout>
